<resources>

    <!-- Base application theme. -->
    <style name="Theme.AppCompatDark.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:windowBackground">false</item>
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompatDark.NoActionBar.FullScreen">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="login" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:windowBackground">@drawable/loginscreen</item>
    </style>

    <style name="pirate" parent = "@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">#c7bf98</item>
    </style>

    <style name="config" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name = "android:windowBackground">@drawable/space</item>
    </style>




</resources>
