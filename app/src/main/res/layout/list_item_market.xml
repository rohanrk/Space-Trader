<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="4"
        app:rowCount="1">

    <TextView
            android:text="Item Name"
            app:layout_column="0"
            android:id="@+id/item_name"
            android:textAppearance="@android:style/TextAppearance.Material.Large" android:layout_width="164dp"/>

    <TextView
            android:text="Qty"
            app:layout_column="1"
            android:id="@+id/item_quantity"
            android:textAppearance="@android:style/TextAppearance.Material.Large" android:layout_width="56dp"/>

    <TextView
            android:text="10 credits"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            app:layout_column="2"
            android:id="@+id/item_price"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <Button
            android:text="Sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="3"
            android:id="@+id/item_action_button"
            style="@style/Widget.AppCompat.Button.Colored"/>


</android.support.v7.widget.GridLayout>
