<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.LoadingScreenActivity"
        android:background="@color/design_default_color_primary_dark">
    <Spinner
            android:layout_width="395dp"
            android:layout_height="15dp"
            android:id="@+id/load_spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_text" android:layout_marginBottom="336dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="@string/selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_text"
            android:textSize="20sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="5dp"
            android:layout_marginTop="99dp" app:layout_constraintTop_toBottomOf="@+id/loadgame"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/load_spinner"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="115dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="@string/loadsave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loadgame"
            android:textSize="50sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="66dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="76dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="67dp"
            app:layout_constraintHorizontal_bias="0.458"
    />
</android.support.constraint.ConstraintLayout>